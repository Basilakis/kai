# KAI Platform Environment Configuration
# Copy this file to .env and fill in the values
# This file contains SENSITIVE information that should NOT be committed to the repository
# Environment-specific overrides should go in .env.development, .env.staging, or .env.production

# ============================================================
# OpenAI API Configuration
# ============================================================
# Your OpenAI API key (required)
OPENAI_API_KEY=
# Default model to use for agent operations
OPENAI_DEFAULT_MODEL=gpt-4
# Temperature setting for AI responses (0.0-1.0)
OPENAI_TEMPERATURE=0.7

# ============================================================
# Authentication
# ============================================================
# JWT secret for authentication
JWT_SECRET=
# JWT token expiration time (in seconds)
JWT_EXPIRATION=86400

# ============================================================
# Database Configuration
# ============================================================
# MongoDB connection URI
MONGODB_URI=
# Database username (if not using connection URI)
DATABASE_USER=
# Database password (if not using connection URI)
DATABASE_PASSWORD=
# Database name (if not using connection URI)
DATABASE_NAME=

# ============================================================
# Redis Configuration
# ============================================================
# Redis connection URL
REDIS_URL=
# Redis host (if not using connection URL)
REDIS_HOST=
# Redis port (if not using connection URL)
REDIS_PORT=
# Redis username (if required)
REDIS_USERNAME=
# Redis password (if required)
REDIS_PASSWORD=

# ============================================================
# AWS/S3 Storage Configuration
# ============================================================
# S3 endpoint URL
S3_ENDPOINT=
# S3 access key
S3_ACCESS_KEY=
# S3 secret key
S3_SECRET_KEY=
# Alternative AWS credentials (if not using S3_* variables)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================================
# Supabase Configuration
# ============================================================
# Supabase URL
SUPABASE_URL=
# Supabase API key
SUPABASE_KEY=
# Supabase anonymous key
SUPABASE_ANON_KEY=
# Supabase service role key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=

# ============================================================
# HuggingFace Configuration
# ============================================================
# HuggingFace API key
HF_API_KEY=
# HuggingFace organization ID
HF_ORGANIZATION_ID=

# ============================================================
# Stripe Payment Configuration
# ============================================================
# Stripe API key (secret key)
STRIPE_SECRET_KEY=
# Stripe publishable key (for frontend)
GATSBY_STRIPE_PUBLISHABLE_KEY=
# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=
# Stripe API version
STRIPE_API_VERSION=2023-10-16

# ============================================================
# Credentials Encryption (for web crawler)
# ============================================================
# Encryption key for stored credentials
CREDENTIALS_ENCRYPTION_KEY=
# Jina AI API key for web crawler
JINA_API_KEY=

# ============================================================
# Anthropic Configuration
# ============================================================
# Anthropic API key
ANTHROPIC_API_KEY=

# ============================================================
# API Keys for Other Services
# ============================================================
# KAI API key for service authentication
KAI_API_KEY=
# Agent API key for agent authentication
AGENT_API_KEY=
