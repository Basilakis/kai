{
  "name": "@kai/server",
  "version": "0.1.0",
  "private": true,
  "description": "Backend Node.js API for tile recognition system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --testPathIgnorePatterns=/node_modules/ --testRegex=\"\\\\.(test|spec)\\\\.[tj]sx?$\"",
    "test:unit": "jest --testPathIgnorePatterns=/node_modules/,/integration/,/contract/ --testRegex=\"\\\\.(test|spec)\\\\.[tj]sx?$\"",
    "test:integration": "jest --testPathIgnorePatterns=/node_modules/ --testPathPattern=src/tests/integration",
    "test:contract": "jest --testPathIgnorePatterns=/node_modules/ --testPathPattern=src/tests/contract",
    "lint": "eslint . --ext .js,.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.374.0",
    "@aws-sdk/client-ses": "^3.374.0",
    "@aws-sdk/s3-request-presigner": "^3.374.0",
    "@heroui/node": "^1.0.0",
    "@kai/shared": "0.1.0",
    "@kai/mcp-client": "1.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^0.27.2",
    "form-data": "^4.0.0",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "mongodb": "^5.7.0",
    "mongoose": "^7.3.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-oauth2": "^1.7.0",
    "pdfjs-dist": "^3.8.162",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0",
    "ws": "^8.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.2",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-oauth2": "^1.4.12",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/ws": "^8.5.10",
    "eslint": "^8.44.0",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}