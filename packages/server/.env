# KAI Server Environment Configuration

# ============================================================
# Server Configuration
# ============================================================
# Port for server to listen on
PORT=3000
# Node environment (development, production, test)
NODE_ENV=development

# ============================================================
# Authentication
# ============================================================
# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here_for_dev
# JWT token expiration time (in seconds)
JWT_EXPIRATION=86400
# Agent API key for authentication
AGENT_API_KEY=development-key

# ============================================================
# Database Configuration - Supabase
# ============================================================
# Supabase URL
SUPABASE_URL=
# Supabase API key
SUPABASE_KEY=
# Supabase storage bucket
SUPABASE_STORAGE_BUCKET=materials

# ============================================================
# Redis Configuration
# ============================================================
# Redis server host
REDIS_HOST=localhost
# Redis server port
REDIS_PORT=6379
# Redis username if required
REDIS_USERNAME=
# Redis password if required
REDIS_PASSWORD=
# Redis database number
REDIS_DB=0

# ============================================================
# Storage Configuration
# ============================================================
# AWS region
AWS_REGION=us-east-1
# AWS access key ID
AWS_ACCESS_KEY_ID=
# AWS secret access key
AWS_SECRET_ACCESS_KEY=
# S3 bucket name
S3_BUCKET=kai-storage
# Temporary directory for file processing
TEMP=/tmp

# ============================================================
# HuggingFace Configuration
# ============================================================
# HuggingFace API key
HF_API_KEY=
# HuggingFace organization ID
HF_ORGANIZATION_ID=
# Default dataset provider
DEFAULT_DATASET_PROVIDER=
# HuggingFace Model Configuration
# Default text model for natural language processing and material descriptions
HF_DEFAULT_TEXT_MODEL=microsoft/DialoGPT-medium
# Default embedding model for vector similarity search and semantic matching
HF_DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Default image model for material recognition and visual analysis
HF_DEFAULT_IMAGE_MODEL=google/vit-base-patch16-224
# Model request timeout in milliseconds (30 seconds)
HF_MODEL_TIMEOUT=30000
# Use faster, optimized models when available
HF_USE_FAST_MODELS=true
# OCR model path for document processing
OCR_MODEL_PATH=./models/ocr/easyocr
# Maximum ML processing time in milliseconds (5 minutes)
ML_MAX_PROCESSING_TIME=300000
# Model cache directory path
MODEL_CACHE_PATH=./cache/models

# ============================================================
# Logging Configuration
# ============================================================
# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info