# KAI Server Environment Configuration

# ============================================================
# Server Configuration
# ============================================================
# Port for server to listen on
PORT=3000
# Node environment (development, production, test)
NODE_ENV=development

# ============================================================
# Authentication
# ============================================================
# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here_for_dev
# JWT token expiration time (in seconds)
JWT_EXPIRATION=86400
# Agent API key for authentication
AGENT_API_KEY=development-key

# ============================================================
# Database Configuration - Supabase
# ============================================================
# Supabase URL
SUPABASE_URL=
# Supabase API key
SUPABASE_KEY=
# Supabase storage bucket
SUPABASE_STORAGE_BUCKET=materials

# ============================================================
# Redis Configuration
# ============================================================
# Redis server host
REDIS_HOST=localhost
# Redis server port
REDIS_PORT=6379
# Redis username if required
REDIS_USERNAME=
# Redis password if required
REDIS_PASSWORD=
# Redis database number
REDIS_DB=0

# ============================================================
# Storage Configuration
# ============================================================
# AWS region
AWS_REGION=us-east-1
# AWS access key ID
AWS_ACCESS_KEY_ID=
# AWS secret access key
AWS_SECRET_ACCESS_KEY=
# S3 bucket name
S3_BUCKET=kai-storage
# Temporary directory for file processing
TEMP=/tmp

# ============================================================
# HuggingFace Configuration
# ============================================================
# HuggingFace API key
HF_API_KEY=
# HuggingFace organization ID
HF_ORGANIZATION_ID=
# Default dataset provider
DEFAULT_DATASET_PROVIDER=

# ============================================================
# Logging Configuration
# ============================================================
# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info