{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../", // Setting rootDir to include all packages
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@kai/ml": ["../ml/src"],
      "@kai/shared": ["../shared/src"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "../shared/src/types",
      "./src/types"
    ],
    // Remove explicit "types" array to allow our custom definitions to take precedence
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "../ml/src/index.ts",  /* Include ML package for type checking */
    "../shared/src/**/*"   /* Include shared package for type checking */
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}