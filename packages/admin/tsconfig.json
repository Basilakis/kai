{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Reverted back from bundler
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@kai/shared/*": ["../shared/*"]
    },
    "typeRoots": [ // Explicitly add typeRoots
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.d.ts", "../shared/src/types/*.ts", "../shared/src/utils/*.ts", "src/types/**/*.d.ts", "src/custom.d.ts", "src/react-app-env.d.ts"],
  "exclude": ["node_modules"]
}